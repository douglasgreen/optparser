{
    "name": "douglasgreen/optparser",
    "description": "Parser for command-line options in PHP programs",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/douglasgreen/optparser",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "automation",
        "cli",
        "cli library",
        "cli tool",
        "command",
        "command line",
        "command-line interface",
        "command-line utility",
        "console",
        "php",
        "php automation",
        "php cli",
        "php command line",
        "php console application",
        "php scripting",
        "scripting",
        "terminal"
    ],
    "autoload": {
        "psr-4": {
            "DouglasGreen\\OptParser\\": "src/",
            "DouglasGreen\\OptParser\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "douglasgreen/utility": "dev-main",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.0",
        "symplify/easy-coding-standard": "^12.2"
    },
    "scripts": {
        "lint": [
            "ecs",
            "phpstan analyse",
            "phpmd --cache --cache-file var/cache/phpmd/cache.php . text phpmd.xml",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": "vendor/douglasgreen/config-setup/bin/copy_files.php",
        "post-update-cmd": "vendor/douglasgreen/config-setup/bin/copy_files.php",
        "test": "phpunit"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        }
    ]
}
